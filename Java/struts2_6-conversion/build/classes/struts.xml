<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />

	<!-- 指定国际化 baseName, 以便于建立全局的国际化资源文件 -->
	<constant name="struts.custom.i18n.resources" value="myI18n"></constant>

	<package name="default" namespace="/" extends="struts-default">
	
		<interceptors>
		    <interceptor-stack name="myStack">
		        <interceptor-ref name="paramsPrepareParamsStack">
		            <param name="prepare.alwaysInvokePrepare">false</param>
		        </interceptor-ref>
		    </interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="myStack"></default-interceptor-ref>
	
		<action name="emp_*" class="org.pan.struts2.action.EmployeeAction"
			method="{1}">
			<result name="list">/WEB-INF/pages/list.jsp</result>	
			<result name="success" type="redirectAction">emp_list</result>
			<result name="input">/WEB-INF/pages/input.jsp</result>
		</action>
		
		<action name="user_add" class="org.pan.struts2.action.UserAction" method="addUser">
			<result>/WEB-INF/pages/success.jsp</result>
		</action>
		
		<action name="user_adds" class="org.pan.struts2.action.UserAction" method="addUsers">
			<result>/WEB-INF/pages/success.jsp</result>
		</action>
		
		
		<action name="test">
			<result>/test.jsp</result>
		</action>
	
		<action name="userLogin" class="org.pan.struts2.action.UserLoginAction">
			<result>/WEB-INF/pages/success.jsp</result>
		</action>
	</package>

</struts>
